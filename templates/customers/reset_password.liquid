<div class="container">
  <div class="reset_password-container box-form text-center">
	
	<div class="block-title">
		<h1>{{ 'customer.reset_password.title' | t }}</h1>
		<p class="note">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
	</div>
    {% comment %}
      This form must use 'reset_customer_password'
    {% endcomment %}
    {% form 'reset_customer_password' %}
	
    {%- if form.errors -%}
    <div class="form-message form-message--error">
      {{ form.errors | default_errors }}
    </div>
    {%- endif -%}
	
	<div class="clearfix field">
		<input type="password" value="" name="customer[password]" id="ResetPassword" {% if form.errors contains "password" %} class="error"{% endif %} placeholder="{{ 'customer.reset_password.password' | t }}">
		<label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
	</div>
	<div class="clearfix field">
		<input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" {% if form.errors contains "password" %} class="error"{% endif %} placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
		<label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
	</div>
	<div class="action">
		<input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
   </div>

    {% endform %}

  </div>
</div>
