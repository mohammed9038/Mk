{% if content_for_header contains rpsMetafields.storeFrontScriptDomain %}

  {% assign settings = shop.metafields.rapid-search.rpsSettings %}

  {% if content_for_header contains 'adminBarInjector' or content_for_header contains 'previewBarInjector'  %}
    {% assign is_admin = true %}
  {% else %}
    {% assign is_admin = false %}
  {% endif %}

  {% if settings != '-' and is_admin == false %}
    <script type="text/javascript">
      try {
        window.RapidSearchSettings = {{ settings | json }};
      } catch (error) {}
    </script>
  {% endif %}

{% endif %}
