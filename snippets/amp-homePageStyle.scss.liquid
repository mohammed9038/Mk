.ampcdz-grid-product .flex-grid{margin:0 -0.5rem;flex-wrap: wrap;}
.ampcdz-grid-product .flex-grid .cdz-item{display: flex;justify-content: center;box-sizing: content-box;width: calc(50% - 10px);padding: 0 5px; flex-wrap: wrap;}
@media (min-width: 425px){
	.ampcdz-grid-product .flex-grid .cdz-item{max-width: 175px;}
}
.ampcdz-grid-product .flex-grid .cdz-item .product-item{width:100%;}
.ampcdz-grid-product .product-item{width:180px;display: flex; flex-direction: column;}
.ampcdz-grid-product .product-item-bottom{white-space: normal;display: flex; justify-content: center; align-items: center;flex-wrap: wrap;align-content: space-between;height: 100%;}
.viewall .btn{font-size:16px; min-width:200px;padding:10px;}
.cdz-list-product .product-item:after{display: block;content: "";clear: both;}
.cdz-list-product .product-item .product-item-top{float:left; width:100px;}
.rtl-layout .cdz-list-product .product-item .product-item-top{float:right;}
.cdz-list-product .product-item .product-item-bottom{overflow:hidden; padding-left:10px;margin:0;text-align:left}
.rtl-layout .cdz-list-product .product-item .product-item-bottom{padding-left:0px;padding-right:10px;text-align:right}
.ampcdz-home-blog .post-item{width:350px;white-space: normal;vertical-align: top;}
.ampcdz-home-blog .post-item .post-title{white-space: nowrap; overflow: hidden;text-overflow: ellipsis;}