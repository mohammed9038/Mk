{% comment %}
  List out your main-menu linklist (default)

  More info on linklists:
    - http://docs.shopify.com/themes/liquid-variables/linklists
{% endcomment %}
{% assign bpMMenu =  settings.responsive_header %}
{% if bpMMenu == blank %}
{% assign bpMMenu =  '768' %}
{% endif %}
<nav id="cdzNavDefault" class="cdz-navigation supports-js" data-action="nav-default" data-cdzwidget='{"codazon.buildCdzMegaMenu" : {"type" : "horizontal", "animation" : "transform", "dropdownStyle" : "auto", "breakpoint" : {{bpMMenu}}}}'>
  <div class="cdz-menu cdz-desk-menu cdz-horizontal-menu cdz-transform">
    <ul class="groupmenu">
                  {% for link in site-nav.links %}
                  <li class="level0 item nav-{{forloop.index}}{% if link.active %} active {% if link.child_active %}child-active{% endif %}{% endif %} {% if link.links != blank %} parent {% endif %}">
                  <a class="menu-link" href="{{ link.url }}"><span>{{ link.title }}</span></a>
                  {% if link.links != blank %}
                    <ul class="cat-tree groupmenu-drop groupmenu-width">
                    {% for child_link in link.links %}  
                    <li class="level1 item nav-{{forloop.index}} {% if child_link.active %} active {% if child_link.child_active %}child-active{% endif %}{% endif %}{% if child_link.links != blank %} parent {% endif %}">
                    <a class="menu-link" href= "{{ child_link.url }}"><span>{{ child_link.title }}</span></a>
                    {% if child_link.links != blank %}
                      <ul class="cat-tree child">
                      {% for grandchild_link in child_link.links %}  
                      <li class="level2 item nav-{{forloop.index}} {% if grandchild_link.active %} active {% if grandchild_link.child_active %}child-active{% endif %}{% endif %}"
                      ><a class="menu-link" href= "{{ grandchild_link.url }}"><span>{{ grandchild_link.title }}</span></a></li>
                      {% endfor %}
                      </ul>
                    {% endif %}   
                    </li>
                    {% endfor %}
                    </ul> 
                  {% endif %} 
                  </li>
                  {% endfor %}
                </ul>
  </div>
</nav>




