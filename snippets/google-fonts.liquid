{%- assign google_font_loaded = ',' -%}
{%- if settings.primary_font contains 'Google' -%}
  {%- assign type_base_parts = settings.primary_font | split: '_' -%}
  {% capture baseGoogleUrl %}{{ type_base_parts[1] }}{% if settings.primary_font_weight != blank %}:{{ settings.primary_font_weight }}{% endif %}&display=swap{% endcapture %}
  {%- assign google_font_loaded = google_font_loaded | append: baseGoogleUrl | append: ',' -%}
  {{ '//fonts.googleapis.com/css?family=' | append: baseGoogleUrl | stylesheet_tag }}
{%- endif -%}
{%- if settings.secondary_font contains 'Google' -%}
  {% unless settings.secondary_font contains type_base_parts[1] %}
    {%- assign type_header_parts = settings.secondary_font | split: '_' -%}
    {% capture headerGoogleUrl %}{{ type_header_parts[1] }}{% if settings.secondary_font_weight != blank %}:{{ settings.secondary_font_weight }}{% endif %}&display=swap{% endcapture %}
    {%- unless google_font_loaded contains headerGoogleUrl -%}
    {%- assign google_font_loaded = google_font_loaded | append: headerGoogleUrl | append: ',' -%}
    {{ '//fonts.googleapis.com/css?family=' | append: headerGoogleUrl | stylesheet_tag }}
    {%- endunless -%}
  {% endunless %}
{%- endif -%}
{%- if settings.misc_font contains 'Google' -%}
  {% unless settings.misc_font contains type_base_parts[1] %}
    {%- assign type_header_parts = settings.misc_font | split: '_' -%}
    {% capture headerGoogleUrl %}{{ type_header_parts[1] }}{% if settings.misc_font_weight != blank %}:{{ settings.misc_font_weight }}{% endif %}&display=swap{% endcapture %}
    {%- unless google_font_loaded contains headerGoogleUrl -%}
    {{ '//fonts.googleapis.com/css?family=' | append: headerGoogleUrl | stylesheet_tag }}
    {%- endunless -%}
  {% endunless %}
{%- endif -%}
