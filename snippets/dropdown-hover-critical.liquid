{%- comment -%}
  Critical inline CSS for dropdown hover functionality
  This ensures the styles are loaded immediately
{%- endcomment -%}

<style>
  @media screen and (min-width: 990px) {
    /* Critical dropdown hover styles - Universal Support */
    .header__inline-menu details[open] .header__submenu,
    .header__inline-menu details.hover-active .header__submenu,
    .header__inline-menu details:hover .header__submenu,
    details.pro-nav-submenu[open] .pro-submenu-content,
    details.pro-nav-submenu.hover-active .pro-submenu-content,
    details.pro-nav-submenu:hover .pro-submenu-content,
    li:hover details.pro-nav-submenu .pro-submenu-content,
    nav[role="navigation"] li:hover .pro-submenu-content {
      opacity: 1 !important;
      visibility: visible !important;
      pointer-events: auto !important;
      display: block !important;
      transform: translateY(0) !important;
    }
    
    .dropdown-hover-enabled .header__inline-menu details,
    details.pro-nav-submenu,
    nav[role="navigation"] li {
      position: relative !important;
    }
    
    .dropdown-hover-enabled .header__inline-menu details .header__submenu,
    .pro-submenu-content {
      position: absolute !important;
      top: 100% !important;
      left: 0 !important;
      z-index: 999 !important;
      background: white !important;
      border: 1px solid #ddd !important;
      border-radius: 4px !important;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
      min-width: 200px !important;
      padding: 10px 0 !important;
      transition: opacity 0.3s ease, visibility 0.3s ease !important;
    }
    
    /* Aggressive force visibility */
    details:hover > div,
    details[open] > div,
    li:hover details > div {
      opacity: 1 !important;
      visibility: visible !important;
      pointer-events: auto !important;
      display: block !important;
    }
  }
</style>
