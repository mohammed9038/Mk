			{% unless block.settings.block_title == blank %}
				<p class="b-title h2"><span>{{ block.settings.block_title | escape }}</span></p>
			{% endunless %}
			{% unless block.settings.block_sub_title == blank %}
				<p class="title-desc"><span>{{ block.settings.block_sub_title | escape }}</span></p>
			{% endunless %}
		</div>
	{% endunless %}
	<div class="no-loaded products product-items {{productstyle}}" data-cdzgrid='{{data-grid}}' data-cdzwidget = '{"codazon.sliderMixItem": {{data-owlslider}}}' data-width='{{width_larg}},{{width_small}}' data-alignment="{{largproduct_align}}" data-sameheight=".product-reviews-summary, .product-item-bottom">
		<div class='brand-loader double-bounce-spinner'>
			<div class='double-bounce1'></div>
			<div class='double-bounce2'></div>
		</div>
		{% if collections[slider_collection].products == blank %}
				{% for i in (1..products_count) %}
						<div class="item hide" {{ block.shopify_attributes }}>
							<div class="product-miniature">
								<div class="product-item {% if show_product_text_align == 'center' %} text-center {% elsif show_product_text_align == 'left' %} text-left {% else %} text-right {% endif %}">
									{% assign img_size = thumbnail_width | append: 'x' | append: thumbnail_height %}
									{% assign img_ratio = thumbnail_width | times: 1.0 | divided_by: thumbnail_height %}
									<div class="product-item-top">
										<div class="photo product-item-photo">
											<a href="#" class="product-image-container">
												<span class="product-image-wrapper" style="padding-bottom: 100%">
													<img class="product-image-photo" src="{% comment ls-rpl %}{{ product.featured_image.src | img_url: img_size }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: product.featured_image.src, img_url: img_size -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}" alt="">
												</span>
											</a>
										</div>
									</div>
									<div class="product-item-bottom">
										<div class="product name product-item-name">
											<a class="product-item-link" href="#"><ls-static-188610>Product Name</ls-static-188610></a>
										</div>
										<div class="product description product-item-description">
											<div class="product-description rte" itemprop="description">
												<ls-static-354214>Lorem ipsum dolor sit amet, consectetur adipiscing elit...</ls-static-354214>
											</div>
										</div>
										<div class="product-price">
											<div class="price">
												<span class="product-single__price price-box money">
													23.99$
												</span>
											</div>
										</div>
										
									</div>
								</div>
							</div>
						</div>
				{% endfor %}
			{% else %}
			  {% assign order_by = block.settings.order_by %}
			  {% assign order = block.settings.order %}
			  {% if order == 'asc' %}
				{% assign products = collections[slider_collection].products | sort: order_by %}
			  {% else %}
				{% assign products = collections[slider_collection].products | sort: order_by | reverse %}
			  {% endif %}

			 {%- comment %}<locksmith:140d>{% endcomment -%}
			   {%- assign locksmith_6a20_forloop__size = 0 %}{% for product in products limit: products_count %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_6a20_forloop__size = locksmith_6a20_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_6a20_forloop__index = nil -%}
			 {%- comment %}</locksmith:140d>{% endcomment -%}
			 {% for product in products limit: products_count %}
			 	{%- comment %}<locksmith:e593>{% endcomment -%}
			 	  {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_6a20_forloop__index == nil %}{% assign locksmith_6a20_forloop__index = 1 %}{% assign locksmith_6a20_forloop__index0 = 0 %}{% else %}{% assign locksmith_6a20_forloop__index = locksmith_6a20_forloop__index | plus: 1 %}{% assign locksmith_6a20_forloop__index0 = locksmith_6a20_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_6a20_forloop__index == 1 %}{% assign locksmith_6a20_forloop__first = true %}{% else %}{% assign locksmith_6a20_forloop__first = false %}{% endif %}{% if locksmith_6a20_forloop__index == locksmith_6a20_forloop__size %}{% assign locksmith_6a20_forloop__last = true %}{% else %}{% assign locksmith_6a20_forloop__last = false %}{% endif %}{% assign locksmith_6a20_forloop__rindex = locksmith_6a20_forloop__size | minus: locksmith_6a20_forloop__index | minus: 1 %}{% assign locksmith_6a20_forloop__rindex0 = locksmith_6a20_forloop__size | minus: locksmith_6a20_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
			 	{%- comment %}</locksmith:e593>{% endcomment -%}
