.toolbar{background:{{ settings.amp_body_second_background }};box-shadow: 0 1px 3px #e1e1e1;}
.pagination li a,.pagination li.active span{color: {{ settings.amp_body_default_text }};width:35px;height:35px;border:1px solid #e9eaec; font-size:16px;}
.pagination li:hover a,.pagination li.active span{border-color:{{ settings.amp_body_third_text }};color:{{ settings.amp_body_third_text }};}
@media (max-width: 767px){
	.toolbar{position: relative;padding-bottom:40px;}
	.toolbar .filters-toolbar__product-count{position: absolute;left: 20px; bottom: 9px;}
}
.filter-current-item{border:1px solid {{ settings.amp_body_second_text }}}
.filter-current-content .icon{width: 9px;height: 8px;margin: 0 7px;margin-top: -1px;}
.filter-clear {border:1px solid {{ settings.amp_body_third_text }};color:{{ settings.amp_body_third_text }}; background:none;}
.filter-toogle{color: {{ settings.amp_btn_secondary_background }}; background: {{ settings.amp_btn_secondary_text }}; border-color:{{ settings.amp_btn_secondary_background }}}
.filter-toogle .icon{width:13px; height:13px;}
.filter-options-title{background:none;border:none; border-bottom:1px dashed #e1e1e1;line-height:1.35;}
.filter-options-title .btn-toogle-nav{right: 0px;top: 7px; text-align:center;-webkit-transition: opacity 0.7s ease,transform 0.7s ease,top 0.7s linear 0s; -moz-transition: opacity 0.7s ease,transform 0.7s ease,top 0.7s linear 0s; transition: opacity 0.7s ease,transform 0.7s ease,top 0.7s linear 0s;}
.filter-options-title[aria-expanded='true'] .btn-toogle-nav{transform: rotate(-180deg);top:3px;}
.filter-options-title[aria-expanded='true'] .btn-toogle-nav.out{opacity:0;}
.filter-options-content .item-color{display:inline-block;list-style: none;display: inline-block;width: 30px;height: 30px; border-radius: 100%;font-size: 0;margin: 3px;}
.filter-options-content .item-color a{display:block;width:100%;height:100%;box-shadow: 0 0 4px #b6b6b6;border-radius: 100%;border: 3px solid transparent;}
.filter-options-content .item.active a{color:{{ settings.amp_body_third_text }}}
.filter-options-content .item-color.active a{border-color:{{ settings.amp_body_third_text }}}
.ampcdz-grid-product .flex-grid .cdz-item{display: flex; flex-wrap: wrap;}
.ampcdz-grid-product .flex-grid .cdz-item .product-item{width:100%;display: flex; flex-direction: column;}
.ampcdz-grid-product .product-item-bottom{white-space: normal;display: flex; justify-content: center; align-items: center;flex-wrap: wrap;align-content: space-between;height: 100%;}