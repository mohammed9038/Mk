    outline: 2px solid {{ block.settings.search_focus_color }};
    outline-offset: 1px;
    border-color: {{ block.settings.search_focus_color }};
  }

  .ai-header-search-button-{{ ai_gen_id }} {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ block.settings.search_icon_color }};
    transition: color 0.3s ease;
  }

  .ai-header-search-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.search_icon_hover_color }};
  }

