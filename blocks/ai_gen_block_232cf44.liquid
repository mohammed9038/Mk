    width: 100%;
    background-color: {{ block.settings.header_bg_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-header-top-{{ ai_gen_id }} {
    background-color: {{ block.settings.top_bar_bg_color }};
    color: {{ block.settings.top_bar_text_color }};
    padding: 8px 0;
    font-size: {{ block.settings.top_bar_font_size }}px;
  }

  .ai-header-top-content-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_text_color }};
    text-decoration: none;
