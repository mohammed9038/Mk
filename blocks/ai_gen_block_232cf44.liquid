<header-component-{{ ai_gen_id }} class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-top-{{ ai_gen_id }}">
    <div class="ai-header-top-content-{{ ai_gen_id }}">
      <nav>
        {% if block.settings.navigation != blank %}
          <ul class="ai-header-nav-{{ ai_gen_id }}">
            {% for link in linklists[block.settings.navigation].links %}
              <li>
                <a href="{{ link.url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <div class="ai-header-empty-nav-{{ ai_gen_id }}">
            Select a navigation menu
          </div>
        {% endif %}
      </nav>
    </div>
  </div>

  <div class="ai-header-main-{{ ai_gen_id }}">
    <div class="ai-header-main-content-{{ ai_gen_id }}">
      <div class="ai-header-logo-{{ ai_gen_id }}">
        {% if block.settings.logo %}
          <a href="{{ routes.root_url }}">
            <img 
              src="{{ block.settings.logo | image_url: width: 300 }}" 
              alt="{{ shop.name }}"
              width="{{ block.settings.logo.width }}"
              height="{{ block.settings.logo.height }}"
              loading="lazy"
            >
          </a>
        {% else %}
          <a href="{{ routes.root_url }}" class="ai-header-logo-placeholder-{{ ai_gen_id }}">
            {{ shop.name }}
          </a>
        {% endif %}
      </div>

      <div class="ai-header-search-{{ ai_gen_id }}">
        <form action="{{ routes.search_url }}" method="get" class="ai-header-search-form-{{ ai_gen_id }}">
          <input
            type="search"
            name="q"
            class="ai-header-search-input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.search_placeholder }}"
            value="{{ search.terms | escape }}"
            aria-label="Search products"
          >
          <button type="submit" class="ai-header-search-button-{{ ai_gen_id }}" aria-label="Search">
            <svg class="ai-header-utility-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </button>
        </form>
      </div>

      <div class="ai-header-utilities-{{ ai_gen_id }}">
        {% if block.settings.language_selector_type == 'custom' %}
          <div class="ai-header-language-selector-{{ ai_gen_id }}">
            <button 
              class="ai-header-language-button-{{ ai_gen_id }}"
              aria-expanded="false"
              aria-haspopup="true"
              aria-label="Select language"
            >
              {% if block.settings.current_language_flag %}
                <img 
                  src="{{ block.settings.current_language_flag | image_url: width: 32 }}" 
                  alt="{{ block.settings.current_language_name }}"
                  class="ai-header-language-flag-{{ ai_gen_id }}"
                  width="16"
                  height="12"
                >
              {% endif %}
              <span class="ai-header-language-code-{{ ai_gen_id }}">{{ block.settings.current_language_code }}</span>
              <svg class="ai-header-language-arrow-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"></polyline>
              </svg>
            </button>
            <div class="ai-header-language-dropdown-{{ ai_gen_id }}">
              {% for i in (1..5) %}
                {% assign lang_code_key = 'language_' | append: i | append: '_code' %}
                {% assign lang_name_key = 'language_' | append: i | append: '_name' %}
                {% assign lang_flag_key = 'language_' | append: i | append: '_flag' %}
                {% assign lang_url_key = 'language_' | append: i | append: '_url' %}
                
                {% assign lang_code = block.settings[lang_code_key] %}
                {% assign lang_name = block.settings[lang_name_key] %}
                {% assign lang_flag = block.settings[lang_flag_key] %}
                {% assign lang_url = block.settings[lang_url_key] %}
                
                {% if lang_code != blank and lang_name != blank %}
                  <a 
                    href="{% if lang_url != blank %}{{ lang_url }}{% else %}#{% endif %}"
                    class="ai-header-language-option-{{ ai_gen_id }} {% if lang_code == block.settings.current_language_code %}current{% endif %}"
                  >
                    {% if lang_flag %}
                      <img 
                        src="{{ lang_flag | image_url: width: 32 }}" 
                        alt="{{ lang_name }}"
                        class="ai-header-language-flag-{{ ai_gen_id }}"
                        width="16"
                        height="12"
                      >
                    {% endif %}
                    <span>{{ lang_name }}</span>
                    <span class="ai-header-language-code-{{ ai_gen_id }}">{{ lang_code | upcase }}</span>
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% elsif block.settings.language_selector_type == 'gtranslate' %}
          <div class="ai-header-gtranslate-widget-{{ ai_gen_id }}">
            {% if block.settings.gtranslate_widget_code != blank %}
              {{ block.settings.gtranslate_widget_code }}
            {% else %}
              <div class="ai-header-empty-language-{{ ai_gen_id }}">
                Add GTranslate widget code
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.settings.show_account_link %}
          <a href="{{ routes.account_url }}" class="ai-header-utility-button-{{ ai_gen_id }}" aria-label="Account">
            <svg class="ai-header-utility-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            {% if block.settings.show_utility_labels %}
              <span>Account</span>
            {% endif %}
          </a>
        {% endif %}

        <a href="{{ routes.cart_url }}" class="ai-header-utility-button-{{ ai_gen_id }}" aria-label="Cart ({{ cart.item_count }} items)" style="position: relative;">
          <svg class="ai-header-utility-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="ai-header-cart-count-{{ ai_gen_id }}">{{ cart.item_count }}</span>
          {% endif %}
          {% if block.settings.show_utility_labels %}
            <span>Cart</span>
          {% endif %}
        </a>
      </div>
    </div>
  </div>
</header-component-{{ ai_gen_id }}>

<script>
(function() {
  class HeaderComponent{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.setupSearch();
      this.setupLanguageSelector();
      this.initializeGTranslate();
    }

    setupSearch() {
      const searchForm = this.querySelector('.ai-header-search-form-{{ ai_gen_id }}');
      const searchInput = this.querySelector('.ai-header-search-input-{{ ai_gen_id }}');
      
      if (searchForm && searchInput) {
        searchForm.addEventListener('submit', (e) => {
          if (searchInput.value.trim() === '') {
            e.preventDefault();
            searchInput.focus();
          }
        });
      }
    }

    setupLanguageSelector() {
      const languageButton = this.querySelector('.ai-header-language-button-{{ ai_gen_id }}');
      const languageDropdown = this.querySelector('.ai-header-language-dropdown-{{ ai_gen_id }}');
      const languageArrow = this.querySelector('.ai-header-language-arrow-{{ ai_gen_id }}');

      if (languageButton && languageDropdown) {
        languageButton.addEventListener('click', (e) => {
          e.preventDefault();
          const isOpen = languageDropdown.classList.contains('active');
          
          this.closeAllDropdowns();
          
          if (!isOpen) {
            languageDropdown.classList.add('active');
            languageButton.setAttribute('aria-expanded', 'true');
            if (languageArrow) {
              languageArrow.style.transform = 'rotate(180deg)';
            }
          }
        });

        const languageOptions = languageDropdown.querySelectorAll('.ai-header-language-option-{{ ai_gen_id }}');
        languageOptions.forEach(option => {
          option.addEventListener('click', () => {
            this.closeAllDropdowns();
          });
        });

        document.addEventListener('click', (e) => {
          if (!e.target.closest('.ai-header-language-selector-{{ ai_gen_id }}')) {
            this.closeAllDropdowns();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            this.closeAllDropdowns();
            languageButton.focus();
          }
        });
      }
    }

    closeAllDropdowns() {
      const languageDropdown = this.querySelector('.ai-header-language-dropdown-{{ ai_gen_id }}');
      const languageButton = this.querySelector('.ai-header-language-button-{{ ai_gen_id }}');
      const languageArrow = this.querySelector('.ai-header-language-arrow-{{ ai_gen_id }}');

      if (languageDropdown) {
        languageDropdown.classList.remove('active');
      }
      if (languageButton) {
        languageButton.setAttribute('aria-expanded', 'false');
      }
      if (languageArrow) {
        languageArrow.style.transform = 'rotate(0deg)';
      }
    }

    initializeGTranslate() {
      const gtranslateContainer = this.querySelector('.ai-header-gtranslate-widget-{{ ai_gen_id }}');
      if (gtranslateContainer && window.gtranslateSettings) {
        setTimeout(() => {
          if (window.doGTranslate) {
            window.doGTranslate();
          }
        }, 100);
      }
    }
  }

  customElements.define('header-component-{{ ai_gen_id }}', HeaderComponent{{ ai_gen_id }});
})();
</script>

