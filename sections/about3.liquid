<div class="page-template about-us-3">
	<div class="wrapper-slideshow">
	{%- if section.settings.enable_image -%}
		{%- if section.settings.image != blank -%}
			{% comment ls-rpl %}{%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image, img_url: '1x1' -%}{%- endcapture -%}{%- assign img_url = LS_IMG_URL | replace: '_1x1.', '_{width}x.' -%}{% comment /ls-rpl %}{% endcomment %}
			<img class="img-responsive lazyload{% unless forloop.first == true %} lazypreload{% endunless %}"
				src="{% comment ls-rpl %}{{ section.settings.image | img_url: '300x300' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image, img_url: '300x300' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}"
				data-src="{{ img_url }}"
				data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
				data-aspectratio="{{ section.settings.image.aspect_ratio }}"
				data-sizes="auto"
				alt="{% comment ls-rpl %}{{ section.settings.image.alt | escape }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: section.settings.image -%}{%- endcapture -%}{{ LS_ALT | escape }}{% comment /ls-rpl %}{% endcomment %}">
		{%- else -%}
			<span>
				{{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
			</span>
		{%- endif -%}
	{%- endif -%}
		{%- if section.settings.heading != blank -%}
			<div class="h1 page-title text-center" style="color: {{ section.settings.heading_color }}">
				{{ section.settings.heading | escape }}
			</div>
		{%- endif -%}
	</div>
	<div class="shopify-section about-us-03-content-wrapper">
		<div class="about-content-inner">
			<div class="container">
				{%- if section.settings.enable_information -%}
					<div class="row text-center information-area">
						<div class="block-title col-sm-10 offset-sm-1 col-md-6 offset-md-3">
							<p class="b-title h1 text-uppercase"><span>{{ section.settings.heading_info | escape }}</span></p>
							<p class="title-desc h5"><span>{{ section.settings.subheading_info | escape }}</span></p>
						</div>
						{{ section.settings.content_info }}
					</div>
				{%- endif -%}	
				{%- if section.settings.enable_advertising -%}
					<div class="row adv-area text-center space-lg">
						<div class="block-title col-sm-10 offset-sm-1 col-md-6 offset-md-3">
							<p class="b-title h1 text-uppercase"><span>{{ section.settings.heading_adv | escape }}</span></p>
							<p class="title-desc h5"><span>{{ section.settings.subheading_adv | escape }}</span></p>
						</div>
						<div class="col-12 adv-area mb-4">
							{%- for block in section.blocks -%}
								{% case block.type %}
									{% when 'advertising' %}
									{% comment ls-rpl %}{%- assign image_adv = block.settings.image_adv | img_url: '800x'-%}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.image_adv, img_url: '800x' -%}{%- endcapture -%}{%- assign image_adv = LS_IMG_URL-%}{% comment /ls-rpl %}{% endcomment %}
									{% assign title_adv = block.settings.title_adv %}
									{% assign sub_text_adv = block.settings.sub_text_adv %}
									{% assign btn_adv = block.settings.btn_adv %}
									{% assign link_adv = block.settings.link_adv %}
									<div class="left-right-entry adv-area-wrapper clearfix text-center">
										<div class="right adv-right">
											<div class="entry full-size" style="background-image: url({{ image_adv }});"></div>
										</div>
										<div class="left adv-left">
											<div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
												<div class="adv-content">
													{%- if title_adv != blank -%}<p class="b-title h1 text-uppercase"><span>{{ title_adv | escape }}</span></p>{%- endif -%}	
													{%- if sub_text_adv != blank -%}<p class="b-title h5"><span>{{ sub_text_adv | escape }}</span></p>{%- endif -%}	
													{%- if btn_adv != blank -%}<p class="btn-adv"><a class="title-link btn" href="{{ link_adv }}"><span>{{ btn_adv | escape }}</span></a></p>{%- endif -%}	
												</div>
											</div>
										</div>
									</div>						
								{% endcase %}
							{% endfor %}
						</div>
					</div>
				{%- endif -%}
				
				{%- if section.settings.enable_service -%}
					<div class="row adv-serv text-center space-lg">
						<div class="block-title mb-4 block-title col-sm-10 offset-sm-1 col-md-6 offset-md-3">
							{%- if section.settings.heading_serv != blank -%}<p class="b-title h1 text-uppercase"><span>{{ section.settings.heading_serv | escape }}</span></p>{%- endif -%}	
							{%- if section.settings.subheading_serv != blank -%}<p class="title-desc h5"><span>{{ section.settings.subheading_serv | escape }}</span></p>{%- endif -%}	
						</div>
						<div class="col-md-10 offset-md-1">
							<div class="row">
							{%- for block in section.blocks -%}
								{% case block.type %}
									{% when 'services' %}
										{% assign title_serv = block.settings.title_serv %}
										{% assign content_serv = block.settings.content_serv %}
										<div class="{{ block.settings.class_boostrap_serv }}">
											<div class="box-serv text-left">
												<p class="b-title text-uppercase h3"><span>{{ title_serv | escape }}</span></p>
												<ul class="content-serv">{{ content_serv }}</ul>
											</div>
										</div>
								{% endcase %}
							{% endfor %}
							</div>
						</div>
					</div>
				{%- endif -%}	
			</div>
		</div>
	</div>
</div>
{%- style -%}
	.wrapper-slideshow  span{width: 100%;}
    .wrapper-slideshow img,
    .wrapper-slideshow  span svg {
	  width: 100%;
	    object-fit: cover;
		height: {{ section.settings.slider_desktop_height | default: 250 }}px;
		object-position: {{ section.settings.slider_position }}
    }
	.wrapper-slideshow {
		margin: 0px 0px 50px;
		display: -webkit-box;
		display: -ms-flexbox;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		position: relative;
		-ms-flex-align: center!important;
		align-items: center!important;
	}
	.page-title {width: 100%; font-size: 300%;}
	.b-title.h1 {font-size: 300%;}
	.block-title { width: 100%; }
	.about-content-inner .block-title .title-desc {margin-bottom: 3rem;}
	.box-thumb {margin-bottom: 1rem;}
	.box-thumb img{display: inline-block;}
	{%- if section.settings.enable_image -%}
		.page-title{ position: absolute; left: 1rem; right: 1rem;}
	{%- endif -%}	
    @media screen and (max-width: 767px) {
		.wrapper-slideshow image,
		.wrapper-slideshow  .span svg {
			max-height: 150px;
		}
		.page-title,.b-title.h1 {font-size: 180%;}
    }	
	
	//advertising area
	.adv-area-wrapper {position: relative;}
	.adv-area-wrapper {position: relative;}
	.adv-content {display: table-cell; vertical-align: middle; width: 10000px; height: 410px;padding: 30px 0;}
	.adv-left { width: 50%; float: left;}
	.adv-right { position: absolute; width: 50%; right: 0; top: -12px; bottom: -12px;z-index: 1;}
	.adv-right .full-size {position: absolute;left: 0;  top: 0; width: 100%;height: 100%;background-size: cover; background-position: center top;}
	.left-right-entry:nth-child(2n) .adv-right {right: auto; left: 0;}
	.left-right-entry:nth-child(2n) .adv-left {float: right;}
	@media screen and (max-width: 767px) {   
		.adv-right {position: relative;left: auto; right: auto; top: auto; bottom: auto;height: 400px;width: 100%!important;}
		.adv-left {width: 100%; float: none;}
		.adv-content {    height: auto;}
	}
	
	//services area
	.content-serv li a.item:before { content: "";width: 15px; height: 1px; background: currentColor;display: inline-block; margin: 0 6px 0 15px; vertical-align: middle; position: relative;top: -1px; }
	.content-serv li {margin-bottom: 0.5rem}
	.content-serv li a.item:before { content: "";width: 15px; height: 1px; background: currentColor;display: inline-block; margin: 0 6px 0 15px; vertical-align: middle; position: relative;top: -1px; }
{%- endstyle -%}
