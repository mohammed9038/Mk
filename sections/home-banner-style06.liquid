{% assign banner_heading = section.settings.banner_heading %}
{% assign heading_align = section.settings.heading_align %}

{% assign enable_fullwidth = section.settings.enable_fullwidth %}
{% assign parallax_alignment = section.settings.parallax_alignment %}
{% assign overlay_opacity = section.settings.overlay_opacity %}
{% assign image = section.settings.image %}
{% assign banner_link = section.settings.banner_link %}
{% assign text_desc_01 = section.settings.text_desc_01 %}
{% assign color_text_01 = section.settings.color_text_01 %}
{% assign text_desc_02 = section.settings.text_desc_02 %}
{% assign color_text_02 = section.settings.color_text_02 %}
{% assign button_text = section.settings.button_text %}
{% assign color_btn = section.settings.color_btn %}
{% assign text_block_align = section.settings.text_block_align %}
{% assign text_block_position = section.settings.text_block_position %}

{% capture headText_align %}
	{%- case heading_align -%}
	  {%- when 'left' -%} text-left
	  {%- when 'right' -%} text-right
	  {%- when 'center' -%} text-center
	{%- endcase -%}	
{% endcapture %}

{% capture block_text_align %}
	{%- case text_block_align -%}
	  {%- when 'left' -%} text-left
	  {%- when 'right' -%} text-right
	  {%- when 'center' -%} text-center
	{%- endcase -%}	
{% endcapture %}
{% capture block_text_position %}
	{%- case text_block_position -%}
	  {%- when 'top' -%} align-items-start
	  {%- when 'middle' -%} align-items-center
	  {%- when 'bottom' -%} align-items-end
	{%- endcase -%}	
{% endcapture %}

{% comment ls-rpl %}{%- assign img_url = section.settings.image | img_url: 'master'-%}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image, img_url: 'master' -%}{%- endcapture -%}{%- assign img_url = LS_IMG_URL-%}{% comment /ls-rpl %}{% endcomment %}

<div class="cdz-banner-wrapper">
	{%- if enable_fullwidth -%}
	<div class="cdz-banner banner-style06 parallax-effect cdz-text-inside-wrap space-lg {{ block_text_position }}" style="background-image: url({{ img_url }}); background-position: {{ parallax_alignment }}">
	{%- endif -%}	
		<div class="container">
			<div class="row">
				<div class="col-12">
					{%- if enable_fullwidth == false %}
					<div class="cdz-banner banner-style06 parallax-effect cdz-text-inside-wrap space-lg {{ block_text_position }}" style="background-image: url({{ img_url }}); background-position: {{ parallax_alignment }}">
					{%- endif -%}
					<div class="cdz-banner-text {{ block_text_align }} cdz-text-inside cdz-text-position-insideMiddle col-10">
						<div class="desc01" style="color: {{ color_text_01 }}">{{ text_desc_01 | escape }}</div>
						<div class="desc" style="color: {{ color_text_02 }}">{{ text_desc_02 | escape }}</div>
						{%- if button_text != blank -%}
							<div class="desc-btn" style="margin-top: 20px"><a href="{{ banner_link }}" style="background-color: transparent; color: {{ color_btn }}; border-color: {{ color_btn }}">{{ button_text | escape }}</a></div>
						{%- endif -%}				
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{%- style -%}
	.parallax-effect:after{
		opacity: {{ overlay_opacity | divided_by: 100.00 }}
	}
{%- endstyle -%}

