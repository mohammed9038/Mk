				</div>
				{% unless block_image_mb == blank %}
				<div
                   {% unless block_image_mb.alt == blank %}
                   role="img"
                   aria-label="{% comment ls-rpl %}{{ block_image_mb.alt | escape }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block_image_mb -%}{%- endcapture -%}{{ LS_ALT | escape }}{% comment /ls-rpl %}{% endcomment %}"
