 {%- style -%} 
    .slideshow__slide {position: relative;overflow: hidden;}
	.cdz-slideshow-outer{position: relative;display: block;overflow: hidden;border-radius: {{section.settings.custom_radius}};}
	.cdz-slideshow-inner{position: absolute;width: 100%;height: 100%;top: 0;left: 0;}
	.slideshow {position: relative;  z-index: 1;}
	.icon-loading-wrapper {position: absolute;top: 0;bottom: 0;left: 0;right: 0;}
	.slick-slide{float: left; height: 100%;min-height: 1px;display: none;}
	.slideshow:not(.slick-initialized) .slick-list{display:none;}
	.slick-initialized .slick-slide{display:block;}
	.slick-initialized + .icon-loading-wrapper{opacity: 0;}
	.slideshow-wrapper,.slideshow, .slideshow .slideshow__slide, .slideshow .slick-list, .slideshow .slick-track {height: 100%;}
	.slideshow__image {
		transition: opacity 0.8s cubic-bezier(0.44, 0.13, 0.48, 0.87);
		position: absolute;
		top: 0;
		left: 0;
		opacity: 0;
		height: 100%;
		width: 100%;
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center center;
		background-color: transparent;
		z-index: 1;
	}
    .slick-track:before, .slick-track:after {
        content: "";
        display: table;
    }
	.slideshow__overlay{position: absolute;left: 0;top: 0;right: 0;bottom: 0;background: #000;}
	.slides__text-content{opacity: 0;}
	.slick-initialized .slideshow__image,.slick-initialized .slides__text-content, .no-js .slideshow__image {opacity: 1;}
	
	.slides__btn {display: inline-block; min-height: 1px; min-width: 200px;}
	.slides__subtitle,.slides__title, .slides__subtext {display: block;line-height:1.55em}
	.slides__text-content .slides__subtext p {font-size: inherit;margin:0;}
	.slides__title{font-size:200%; font-weight:600;}
	@media only screen and (min-width: 768px){
		.slides__text--small{font-size: 150%}
		.slides__text--medium{font-size: 200%}
		.slides__text--large{font-size: 250%}
	}
	@media only screen and (max-width: 767px){
		.slides__text-content .slides__btn{margin-top: 1rem!important;}
		{% unless slider_image_ratio_mb == blank %}
			.cdz-slideshow-outer{ padding-bottom:{{ slider_image_ratio_mb | times: 100}}%!important; }
			.slides__text-content{top:10%;-webkit-transform: translateY(0%); -moz-transform: translateY(0%); -ms-transform: translateY(0%); -o-transform: translateY(0%); transform: translateY(0%);}
		{% endunless %}
	}
{%- endstyle -%}

