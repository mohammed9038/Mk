                   {% unless block_image.alt == blank %}
                   role="img"
                   aria-label="{% comment ls-rpl %}{{ block_image.alt | escape }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block_image -%}{%- endcapture -%}{{ LS_ALT | escape }}{% comment /ls-rpl %}{% endcomment %}"
