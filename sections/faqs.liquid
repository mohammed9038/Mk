{%- assign title_text_align = section.settings.title_text_align -%}
<div data-section-id="{{ section.id }}" data-section-type="faqs-section" id="{{ section.id }}" data-aos="fade-up"  class="scrollPanel"> 
	<div class="faq-page space-lg">
		<div class="container">
			{%- unless section.settings.title_block == blank and section.settings.sub_title == blank -%}
				<div class="cdz-block-title block-title-{{title_text_align}}">
					<p class="b-title h2"><span>{{ section.settings.title_block | escape }}</span></p>
					<p class="title-desc"><span>{{ section.settings.sub_title | escape }}</span></p>
				</div>
			{%- endunless -%}
			<div class="block-wrapper">
				<div id="accordion">
					{%- for block in section.blocks -%}
						{%- assign faq_title = block.settings.faq_title -%}
						{%- assign faq_content = block.settings.faq_content -%}
						<div class="card">
							<div class="card-header" id="heading--{{ block.id }}">
								<h5 class="mb-0"><button class="btn btn-link {% if forloop.first == false %} collapsed {% endif %}" data-toggle="collapse" data-target="#collapse--{{ block.id }}" aria-expanded="{% if forloop.first == true %}true{%- else -%}false{%- endif -%}" aria-controls="collapse--{{ block.id }}">{{ faq_title | escape }}</button></h5>
							</div>
							<div id="collapse--{{ block.id }}" class="{% if forloop.first == true %} show {% endif %} collapse" aria-labelledby="heading--{{ block.id }}" data-parent="#accordion">
								<div class="card-body">{{ faq_content }}</div>
							</div>
						</div>
					{%- endfor -%}
				</div>
			</div>
		</div>
	</div>
</div>
{%- style -%}
    .faq-page .card {
         border: none;
    }
     .faq-page .card-header {
         padding: 0;
         border: none;
    }
     .faq-page .card-header button {
         background-color: #fff;
         border: solid 1px #eaeaea;
         border-width: 1px 0;
         width: 100%;
         text-align: inherit;
         padding: 15px 10px;
         -webkit-border-radius: 0;
         -moz-border-radius: 0;
         border-radius: 0;
         text-decoration: none;
         text-transform: none;
         margin-bottom: -1px;
         font-size: 120%;
         position: relative;
    }
     .faq-page .card-header button:before {
         display: inline-block;
         font-family: FontAwesome;
         font-style: normal;
         font-weight: normal;
         line-height: 18px;
         -webkit-font-smoothing: antialiased;
         -moz-osx-font-smoothing: grayscale;
         content: "\f0da";
         font-size: 18px;
         vertical-align: middle;
         padding: 0 10px;
         -webkit-transition: all 500ms ease;
         -moz-transition: all 500ms ease;
         -ms-transition: all 500ms ease;
         -o-transition: all 500ms ease;
         transition: all 500ms ease;
    }
     .rtl-layout .faq-page .card-header button:before {
         content: "\f0d9";
    }
     .faq-page .card-header button:after {
         content: "";
         position: absolute;
         left: 0;
         width: 7px;
         top: -1px;
         bottom: -1px;
         background: transparent;
    }
     .rtl-layout .faq-page .card-header button:after {
         left: auto;
         right: 0;
    }
     .faq-page .card-header button:hover, .faq-page .card-header button:not(.collapsed) {
         background: #f5f5f5;
    }
     .faq-page .card-header button:hover:before, .faq-page .card-header button:not(.collapsed):before {
         -webkit-transform: rotate(90deg);
         -ms-transform: rotate(90deg);
         transform: rotate(90deg);
    }
     .rtl-layout .faq-page .card-header button:hover:before, .rtl-layout .faq-page .card-header button:not(.collapsed):before {
         -webkit-transform: rotate(-90deg);
         -ms-transform: rotate(-90deg);
         transform: rotate(-90deg);
    }
{%- endstyle -%}
{% schema %}
{
  "name": "FAQs",
  "settings": [
	{
	  "type": "text",
	  "id": "title_block",
	  "label": "Heading Block"
	},
	{
	  "type": "textarea",
	  "id": "sub_title",
	  "label": "Describe Heading"
	},
	{
		"type": "select",
		"id": "title_text_align",
		"label": "Heading Alignment",
		"options": [
			{ "value": "left", "label": "Left"},
			{ "value": "right", "label": "Right"},
			{ "value": "center", "label": "Center"}
		],
		"default" : "center"
	}
	],
  "blocks": [
	{
      "name": "Information",
	  "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "faq_title",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "faq_content",
          "label": "Content"
        }
      ]
    }
	]

}
{% endschema %}
