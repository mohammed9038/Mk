{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-section-{{ section.id }} {
    {% if section.settings.background_color != blank and section.settings.background_color != 'rgba(0,0,0,0)' %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    {% if section.settings.background_image %}
      background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
      background-size: cover;
      background-position: center;
      position: relative;
    {% endif %}
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
  }

  .contact-overlay-{{ section.id }} {
    {% if section.settings.background_image and section.settings.overlay_opacity > 0 %}
      background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 1;
    {% endif %}
  }

  .contact-content-{{ section.id }} {
    position: relative;
    z-index: 2;
  }

  .contact-container-{{ section.id }} {
    max-width: {% case section.settings.container_width %}
      {% when 'narrow' %}750px
      {% when 'standard' %}1200px
      {% when 'wide' %}1600px
      {% else %}100%
    {% endcase %};
    margin: 0 auto;
    padding: 0 {% if section.settings.container_width == 'full' %}2rem{% else %}2rem{% endif %};
  }

  .contact-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: {% if section.settings.show_contact_info %}1fr 1fr{% else %}1fr{% endif %};
    gap: {{ section.settings.section_spacing }}px;
    align-items: start;
  }

  @media screen and (max-width: 989px) {
    .contact-grid-{{ section.id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.section_spacing | times: 0.75 }}px;
    }
  }

  .contact-form-wrapper-{{ section.id }} {
    background: {% if section.settings.form_background %}rgba(var(--color-background), 0.95){% else %}transparent{% endif %};
    border: {% if section.settings.show_form_border %}1px solid rgba(var(--color-foreground), 0.1){% else %}none{% endif %};
    border-radius: {{ section.settings.form_border_radius }}px;
    padding: {{ section.settings.form_padding }}px;
    {% if section.settings.form_shadow %}
      box-shadow: 0 8px 32px rgba(var(--color-shadow), 0.12);
    {% endif %}
  }

  .contact-form-title-{{ section.id }} {
    margin-bottom: 1.5rem;
    font-size: {{ section.settings.form_title_size }}px;
    font-weight: {{ section.settings.form_title_weight }};
    text-align: {{ section.settings.form_alignment }};
  }

  .contact-form-subtitle-{{ section.id }} {
    margin-bottom: 2rem;
    color: rgba(var(--color-foreground), 0.8);
    text-align: {{ section.settings.form_alignment }};
    line-height: 1.6;
  }

  .contact-form-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.field_spacing }}px;
  }

  .contact-form-row-{{ section.id }} {
    display: grid;
    grid-template-columns: {% if section.settings.two_column_fields %}1fr 1fr{% else %}1fr{% endif %};
    gap: {{ section.settings.field_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .contact-form-row-{{ section.id }} {
      grid-template-columns: 1fr;
    }
  }

  .contact-field-{{ section.id }} {
    position: relative;
  }

  .contact-field-{{ section.id }} input,
  .contact-field-{{ section.id }} textarea,
  .contact-field-{{ section.id }} select {
    width: 100%;
    padding: {{ section.settings.field_padding }}px;
    border: {{ section.settings.field_border_width }}px solid rgba(var(--color-foreground), {{ section.settings.field_border_opacity | divided_by: 100.0 }});
    border-radius: {{ section.settings.field_border_radius }}px;
    background: {% if section.settings.field_background %}rgba(var(--color-background), 1){% else %}transparent{% endif %};
    font-size: {{ section.settings.field_font_size }}px;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .contact-field-{{ section.id }} input:focus,
  .contact-field-{{ section.id }} textarea:focus,
  .contact-field-{{ section.id }} select:focus {
    outline: none;
    border-color: rgb(var(--color-button));
    {% if section.settings.field_focus_shadow %}
      box-shadow: 0 0 0 3px rgba(var(--color-button), 0.1);
    {% endif %}
    transform: translateY(-1px);
  }

  .contact-field-{{ section.id }} label {
    display: block;
    margin-bottom: 8px;
    font-weight: {{ section.settings.label_font_weight }};
    font-size: {{ section.settings.label_font_size }}px;
    color: rgba(var(--color-foreground), 0.8);
  }

  .contact-field-{{ section.id }} .field-required {
    color: rgb(var(--color-accent));
  }

  .contact-field-{{ section.id }} textarea {
    min-height: {{ section.settings.textarea_height }}px;
    resize: vertical;
  }

  .contact-submit-{{ section.id }} {
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding }}px {{ section.settings.button_padding | times: 1.5 }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    cursor: pointer;
    transition: all 0.3s ease;
    align-self: {% case section.settings.button_alignment %}
      {% when 'left' %}flex-start
      {% when 'center' %}center
      {% when 'right' %}flex-end
      {% else %}stretch
    {% endcase %};
    width: {% if section.settings.button_alignment == 'full' %}100%{% else %}auto{% endif %};
    position: relative;
    overflow: hidden;
  }

  .contact-submit-{{ section.id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(var(--color-button), 0.3);
    background: rgba(var(--color-button), 0.9);
  }

  .contact-submit-{{ section.id }}:active {
    transform: translateY(0);
  }

  .contact-info-wrapper-{{ section.id }} {
    background: {% if section.settings.info_background %}rgba(var(--color-background), 0.95){% else %}transparent{% endif %};
    border: {% if section.settings.show_info_border %}1px solid rgba(var(--color-foreground), 0.1){% else %}none{% endif %};
    border-radius: {{ section.settings.info_border_radius }}px;
    padding: {{ section.settings.info_padding }}px;
    {% if section.settings.info_shadow %}
      box-shadow: 0 8px 32px rgba(var(--color-shadow), 0.12);
    {% endif %}
  }

  .contact-info-title-{{ section.id }} {
    margin-bottom: 1.5rem;
    font-size: {{ section.settings.info_title_size }}px;
    font-weight: {{ section.settings.info_title_weight }};
  }

  .contact-info-item-{{ section.id }} {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: {{ section.settings.info_item_spacing }}px;
    padding: {{ section.settings.info_item_padding }}px;
    border-radius: {{ section.settings.info_item_border_radius }}px;
    {% if section.settings.info_item_background %}
      background: rgba(var(--color-foreground), 0.04);
    {% endif %}
    transition: all 0.3s ease;
  }

  .contact-info-item-{{ section.id }}:hover {
    {% if section.settings.info_hover_effect == 'lift' %}
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(var(--color-shadow), 0.15);
    {% elsif section.settings.info_hover_effect == 'scale' %}
      transform: scale(1.02);
    {% endif %}
  }

  .contact-info-icon-{{ section.id }} {
    width: {{ section.settings.info_icon_size }}px;
    height: {{ section.settings.info_icon_size }}px;
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border-radius: {% if section.settings.info_icon_style == 'circle' %}50%{% else %}8px{% endif %};
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: {{ section.settings.info_icon_size | times: 0.5 }}px;
  }

  .contact-info-content-{{ section.id }} h4 {
    margin: 0 0 4px 0;
    font-weight: 600;
    font-size: {{ section.settings.info_content_title_size }}px;
  }

  .contact-info-content-{{ section.id }} p {
    margin: 0;
    color: rgba(var(--color-foreground), 0.8);
    font-size: {{ section.settings.info_content_text_size }}px;
    line-height: 1.5;
  }

  .contact-social-links-{{ section.id }} {
    display: flex;
    gap: 16px;
    margin-top: 2rem;
    justify-content: {% case section.settings.social_alignment %}
      {% when 'left' %}flex-start
      {% when 'center' %}center
      {% when 'right' %}flex-end
    {% endcase %};
  }

  .contact-social-link-{{ section.id }} {
    width: {{ section.settings.social_icon_size }}px;
    height: {{ section.settings.social_icon_size }}px;
    background: rgba(var(--color-foreground), 0.1);
    color: rgb(var(--color-foreground));
    border-radius: {% if section.settings.social_icon_style == 'circle' %}50%{% else %}8px{% endif %};
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: {{ section.settings.social_icon_size | times: 0.5 }}px;
  }

  .contact-social-link-{{ section.id }}:hover {
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--color-button), 0.3);
  }

  .contact-success-message {
    background: rgba(var(--color-success), 0.1);
    border: 1px solid rgba(var(--color-success), 0.2);
    color: rgb(var(--color-success));
    padding: 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    display: none;
  }

  .contact-success-message.show {
    display: block;
    animation: slideInDown 0.5s ease;
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 749px) {
    .contact-form-wrapper-{{ section.id }},
    .contact-info-wrapper-{{ section.id }} {
      padding: {{ section.settings.form_padding | times: 0.75 }}px;
    }
    
    .contact-field-{{ section.id }} input,
    .contact-field-{{ section.id }} textarea,
    .contact-field-{{ section.id }} select {
      padding: {{ section.settings.field_padding | times: 0.85 }}px;
    }
  }
{%- endstyle -%}

<div class="contact-section contact-section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="contact-overlay-{{ section.id }}"></div>
  
  <div class="contact-content-{{ section.id }}">
    <div class="contact-container-{{ section.id }}">
      {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
        <div class="contact-header text-{{ section.settings.header_alignment }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {% if section.settings.section_title != blank %}
            <h2 class="contact-main-title {{ section.settings.heading_size }}">
              {{ section.settings.section_title }}
            </h2>
          {% endif %}
          {% if section.settings.section_subtitle != blank %}
            <div class="contact-main-subtitle rte">
              {{ section.settings.section_subtitle }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="contact-grid-{{ section.id }}">
        <!-- Contact Form -->
        <div class="contact-form-wrapper contact-form-wrapper-{{ section.id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <div id="contactSuccessMessage" class="contact-success-message">
            <strong>‚úì Thank you!</strong> Your message has been sent successfully. We'll get back to you soon.
          </div>

          {% if section.settings.form_title != blank %}
            <h3 class="contact-form-title contact-form-title-{{ section.id }}">
              {{ section.settings.form_title }}
            </h3>
          {% endif %}
          
          {% if section.settings.form_subtitle != blank %}
            <div class="contact-form-subtitle contact-form-subtitle-{{ section.id }} rte">
              {{ section.settings.form_subtitle }}
            </div>
          {% endif %}

          {% form 'contact', id: 'ContactForm', class: 'contact-form contact-form-' | append: section.id %}
            {% if form.posted_successfully? %}
              <script>
                document.getElementById('contactSuccessMessage').classList.add('show');
                setTimeout(() => {
                  document.getElementById('contactSuccessMessage').classList.remove('show');
                }, 5000);
              </script>
            {% endif %}

            {% if form.errors %}
              <div class="form__message form__message--error">
                <h3 class="form-status caption-large text-body" role="status" tabindex="-1">
                  {{ 'templates.contact.form.error_heading' | t }}
                </h3>
                <ul>
                  {% for field in form.errors %}
                    <li>
                      {% if field == 'form' %}
                        {{ form.errors.messages[field] }}
                      {% else %}
                        {{ form.errors.translated_fields[field] | capitalize }} {{ form.errors.messages[field] }}
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            <div class="contact-form-row contact-form-row-{{ section.id }}">
              <div class="contact-field contact-field-{{ section.id }}">
                <label for="ContactForm-name">
                  {{ 'templates.contact.form.name' | t }} <span class="field-required">*</span>
                </label>
                <input
                  class="field__input"
                  autocomplete="name"
                  type="text"
                  id="ContactForm-name"
                  name="contact[{{ 'templates.contact.form.name' | t }}]"
                  value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                  placeholder="{{ 'templates.contact.form.name' | t }}"
                  required
                >
              </div>

              <div class="contact-field contact-field-{{ section.id }}">
                <label for="ContactForm-email">
                  {{ 'templates.contact.form.email' | t }} <span class="field-required">*</span>
                </label>
                <input
                  autocomplete="email"
                  type="email"
                  id="ContactForm-email"
                  class="field__input"
                  name="contact[email]"
                  spellcheck="false"
                  autocapitalize="off"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                  aria-required="true"
                  placeholder="{{ 'templates.contact.form.email' | t }}"
                  required
                >
              </div>
            </div>

            {% if section.settings.show_phone_field %}
              <div class="contact-field contact-field-{{ section.id }}">
                <label for="ContactForm-phone">
                  {{ 'templates.contact.form.phone' | t }}
                </label>
                <input
                  type="tel"
                  id="ContactForm-phone"
                  class="field__input"
                  autocomplete="tel"
                  name="contact[{{ 'templates.contact.form.phone' | t }}]"
                  pattern="[0-9\-]*"
                  value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                  placeholder="{{ 'templates.contact.form.phone' | t }}"
                >
              </div>
            {% endif %}

            {% if section.settings.show_subject_field %}
              <div class="contact-field contact-field-{{ section.id }}">
                <label for="ContactForm-subject">
                  {{ 'templates.contact.form.subject' | t }}
                </label>
                <select id="ContactForm-subject" name="contact[{{ 'templates.contact.form.subject' | t }}]">
                  <option value="">{{ 'templates.contact.form.subject_placeholder' | t }}</option>
                  {% if section.settings.subject_options != blank %}
                    {% assign subjects = section.settings.subject_options | split: ',' %}
                    {% for subject in subjects %}
                      <option value="{{ subject | strip }}">{{ subject | strip }}</option>
                    {% endfor %}
                  {% else %}
                    <option value="General Inquiry">General Inquiry</option>
                    <option value="Product Support">Product Support</option>
                    <option value="Order Status">Order Status</option>
                    <option value="Returns & Exchanges">Returns & Exchanges</option>
                    <option value="Wholesale Inquiry">Wholesale Inquiry</option>
                  {% endif %}
                </select>
              </div>
            {% endif %}

            <div class="contact-field contact-field-{{ section.id }}">
              <label for="ContactForm-body">
                {{ 'templates.contact.form.comment' | t }} <span class="field-required">*</span>
              </label>
              <textarea
                rows="10"
                id="ContactForm-body"
                class="text-area field__input"
                name="contact[body]"
                placeholder="{{ 'templates.contact.form.comment' | t }}"
                required
              >
                {{- form.body -}}
              </textarea>
            </div>

            <button type="submit" class="contact-submit contact-submit-{{ section.id }}">
              {{ section.settings.button_text | default: 'Send Message' }}
            </button>
          {% endform %}
        </div>

        <!-- Contact Info -->
        {% if section.settings.show_contact_info %}
          <div class="contact-info-wrapper contact-info-wrapper-{{ section.id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {% if section.settings.info_title != blank %}
              <h3 class="contact-info-title contact-info-title-{{ section.id }}">
                {{ section.settings.info_title }}
              </h3>
            {% endif %}

            {% for block in section.blocks %}
              <div class="contact-info-item contact-info-item-{{ section.id }}" {{ block.shopify_attributes }}>
                <div class="contact-info-icon contact-info-icon-{{ section.id }}">
                  {% case block.type %}
                    {% when 'address' %}
                      üìç
                    {% when 'phone' %}
                      üìû
                    {% when 'email' %}
                      ‚úâÔ∏è
                    {% when 'hours' %}
                      üïí
                    {% when 'custom' %}
                      {{ block.settings.custom_icon | default: 'üìã' }}
                  {% endcase %}
                </div>
                <div class="contact-info-content contact-info-content-{{ section.id }}">
                  <h4>{{ block.settings.title }}</h4>
                  <p>{{ block.settings.content }}</p>
                </div>
              </div>
            {% endfor %}

            {% if section.settings.show_social_links %}
              <div class="contact-social-links contact-social-links-{{ section.id }}">
                {% if settings.social_facebook_link != blank %}
                  <a href="{{ settings.social_facebook_link }}" class="contact-social-link contact-social-link-{{ section.id }}" target="_blank" rel="noopener">
                    <svg viewBox="0 0 24 24" fill="currentColor" width="100%" height="100%">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                {% endif %}
                {% if settings.social_instagram_link != blank %}
                  <a href="{{ settings.social_instagram_link }}" class="contact-social-link contact-social-link-{{ section.id }}" target="_blank" rel="noopener">
                    <svg viewBox="0 0 24 24" fill="currentColor" width="100%" height="100%">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </a>
                {% endif %}
                {% if settings.social_twitter_link != blank %}
                  <a href="{{ settings.social_twitter_link }}" class="contact-social-link contact-social-link-{{ section.id }}" target="_blank" rel="noopener">
                    <svg viewBox="0 0 24 24" fill="currentColor" width="100%" height="100%">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Enhanced Contact Form",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "default": "Get In Touch",
      "label": "Section title"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Title size"
    },
    {
      "type": "richtext",
