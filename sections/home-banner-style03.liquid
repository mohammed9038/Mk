						<div class="desc01" style="color: {{ color_text_img02_01 }}">{{ text_desc_img02_01 | escape }}</div>
						<div class="desc02" style="color: {{ color_text_img02_02 }}">{{ text_desc_img02_02 | escape }}</div>
					</div>
				</div>
			{%- endif -%}
