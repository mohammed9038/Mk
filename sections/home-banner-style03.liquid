<div class="cdz-banner-wrapper space-lg" data-section-id="{{ section.id }}">
	<div class="container">
	  {% if section.settings.banner_heading != blank %}
	  <div class="row">
		  <div class="col-12">
			<div class="cdz-block-title {{ headText_align }}">
				<p class="b-title h2"><span>{{ section.settings.banner_heading | escape }}</span></p>
			</div>
		  </div>
	  </div>
	  {% endif %}
	</div>
	<div class="container">
		<div class="row no-gutters">
		{%- if enable_image1 or enable_image2 -%}
			<div class="{%- if enable_image3 -%}  col-sm-6 {%- else -%}  col-sm-12 {%- endif -%}">
			{%- if enable_image1 -%}
				<div class="cdz-banner banner-style03 cdz-text-inside-wrap {{ effect1 }} {{ block_text_position01 }}">
					<div class="cdz-banner-img">
						{% comment ls-rpl %}{%- assign img_url1 = section.settings.image1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image1, img_url: '1x1' -%}{%- endcapture -%}{%- assign img_url1 = LS_IMG_URL | replace: '_1x1.', '_{width}x.' -%}{% comment /ls-rpl %}{% endcomment %}
						{%- if section.settings.image1 != blank -%}
						<a class="" href="{{ banner_link01 }}">
						  <img class="img-responsive lazyload lz-img {% unless forloop.first == true %} lazypreload{% endunless %}"
								data-src="{{ img_url1 }}"
								data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
								data-aspectratio="{{ section.settings.image1.aspect_ratio }}"
								data-sizes="auto"
								alt="{% comment ls-rpl %}{{ section.settings.image1.alt | escape }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: section.settings.image1 -%}{%- endcapture -%}{{ LS_ALT | escape }}{% comment /ls-rpl %}{% endcomment %}">
						</a>
						{%- else -%}
						 <a class="" href="{{ banner_link01 }}">
						  <span>
							{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
						  </span>
						 </a>
						{%- endif -%}
					</div>
					<div class="cdz-banner-text cdz-text-inside {{ block_text_align01 }}">
						<div class="desc01" style="color: {{ color_text_img01_01 }}">{{ text_desc_img01_01 | escape }}</div>
						<div class="desc02" style="color: {{ color_text_img01_02 }}">{{ text_desc_img01_02 | escape }}</div>
					</div>
				</div>
			{%- endif -%}
			{%- if enable_image2 -%}
				<div class="cdz-banner banner-style03 cdz-text-inside-wrap {{ effect2 }} {{ block_text_position02 }}">
					<div class="cdz-banner-img">
						{% comment ls-rpl %}{%- assign img_url2 = section.settings.image2 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image2, img_url: '1x1' -%}{%- endcapture -%}{%- assign img_url2 = LS_IMG_URL | replace: '_1x1.', '_{width}x.' -%}{% comment /ls-rpl %}{% endcomment %}
						{%- if section.settings.image2 != blank -%}
						<a class="" href="{{ banner_link02 }}">
						  <img class="img-responsive lazyload {% unless forloop.first == true %} lazypreload{% endunless %}"
								src="{{ 'loading-image.gif' | asset_url }}"
								data-src="{{ img_url2 }}"
								data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
								data-aspectratio="{{ section.settings.image2.aspect_ratio }}"
								data-sizes="auto"
								alt="{% comment ls-rpl %}{{ section.settings.image2.alt | escape }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: section.settings.image2 -%}{%- endcapture -%}{{ LS_ALT | escape }}{% comment /ls-rpl %}{% endcomment %}">
						</a>
						{%- else -%}
