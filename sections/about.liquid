	.wrapper-slideshow  span{width: 100%;}
    .wrapper-slideshow img,
    .wrapper-slideshow  span svg {
	  width: 100%;
	    object-fit: cover;
		height: {{ section.settings.slider_desktop_height | default: 250 }}px;
		object-position: {{ section.settings.slider_position }}
    }
	.wrapper-slideshow {
		margin: 0px 0px 50px;
		display: -webkit-box;
		display: -ms-flexbox;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		position: relative;
		-ms-flex-align: center!important;
		align-items: center!important;
	}
	.page-title {width: 100%; font-size: 300%;}
	.block-title { width: 100%; }
	.about-content-inner .block-title .title-desc {margin-bottom: 3rem;}
	.box-thumb {margin-bottom: 1rem;}
	.box-thumb img{display: inline-block;}
	{%- if section.settings.enable_image -%}
		.page-title{ position: absolute; left: 1rem; right: 1rem;}
	{%- endif -%}	
    @media screen and (max-width: 767px) {
		.wrapper-slideshow image,
		.wrapper-slideshow  .span svg {
			max-height: 150px;
		}
		.page-title {font-size: 140%;}
    }
    @media screen and (min-width: 768px) {
		.information-area .title-desc {display: inline-block; max-width: 60%;}
    }
	.about-content-inner .block-title p {margin-bottom: 1rem;}
	.about-us-01-content-wrapper {margin-bottom: 1rem;}
	.about-content-inner .block-content {margin-bottom: 1rem;}
	.about-content-inner .block-content p {margin-bottom: 5px;}
	.cdzbox.adv-wrapper{
		margin-top: 50px;
		padding: 5rem 3rem;
		background: #f7f7fd;
	}
	.cdzbox.box-serv{
		background: #f7f7fd;
		margin-bottom: 20px;
	}
	.parallax-effect:after{
		opacity: {{ overlay_opacity | divided_by: 100.00 }}
	}	
{%- endstyle -%}
