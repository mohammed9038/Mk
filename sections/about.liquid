<div class="page-template about-us-1">
	<div class="wrapper-slideshow">
	{%- if section.settings.enable_image -%}
		{%- if section.settings.image != blank -%}
			{% comment ls-rpl %}{%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image, img_url: '1x1' -%}{%- endcapture -%}{%- assign img_url = LS_IMG_URL | replace: '_1x1.', '_{width}x.' -%}{% comment /ls-rpl %}{% endcomment %}
			<img class="img-responsive lazyload{% unless forloop.first == true %} lazypreload{% endunless %}"
				src="{% comment ls-rpl %}{{ section.settings.image | img_url: '300x300' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: section.settings.image, img_url: '300x300' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}"
				data-src="{{ img_url }}"
				data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
				data-aspectratio="{{ section.settings.image.aspect_ratio }}"
				data-sizes="auto"
				alt="{% comment ls-rpl %}{{ section.settings.image.alt | escape }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: section.settings.image -%}{%- endcapture -%}{{ LS_ALT | escape }}{% comment /ls-rpl %}{% endcomment %}">
		{%- else -%}
			<span>
				{{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
			</span>
		{%- endif -%}
	{%- endif -%}
		{%- if section.settings.heading != blank -%}
			<div class="h1 page-title text-center" style="color: {{ section.settings.heading_color }}">
				{{ section.settings.heading | escape }}
			</div>
		{%- endif -%}
	</div>
	<div class="shopify-section about-us-01-content-wrapper">
		<div class="about-content-inner">
			<div class="container">
				{%- if section.settings.enable_information -%}
					<div class="row text-center information-area">
						<div class="block-title">
							<p class="b-title h1 text-uppercase"><span>{{ section.settings.heading_info | escape }}</span></p>
							<p class="title-desc"><span>{{ section.settings.subheading_info | escape }}</span></p>
						</div>
						{{ section.settings.content_info }}
					</div>
				{%- endif -%}	
				{%- if section.settings.enable_advertising -%}
					<div class="row adv-area">
						<div class="col-12">
							<div class="cdzbox adv-wrapper text-center">
								<div class="block-title">
									<p class="b-title h1 text-uppercase"><span>{{ section.settings.heading_adv | escape }}</span></p>
									<p class="title-desc"><span>{{ section.settings.subheading_adv | escape }}</span></p>
								</div>
								<div class="row">
								{%- for block in section.blocks -%}
									{% case block.type %}
										{% when 'advertising' %}
											{% assign title_adv = block.settings.title_adv %}
											{% assign sub_text_adv = block.settings.sub_text_adv %}
											{% assign image_adv = block.settings.image_adv %}
											{% assign image_size_adv = block.settings.image_size_adv %}
											<div class="{{ block.settings.class_boostrap }}">
												<div class="box-adv text-center">
													<div class="box-thumb">
														<img class="img-responsive" src="{% comment ls-rpl %}{{ image_adv | img_url : image_size_adv }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: image_adv, img_url : image_size_adv -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}" />
													</div>
													<div class="box-title">
														<p class="b-title h3"><span>{{ title_adv | escape }}</span></p>
														<p class="b-title"><span>{{ sub_text_adv | escape }}</span></p>
													</div>
												</div>
											</div>
									{% endcase %}
								{% endfor %}
								</div>
							</div>
						</div>
					</div>
				{%- endif -%}
			</div>
			{%- if section.settings.enable_banner -%}
			<div class="cdz-banner-wrapper">
				<div class="cdz-banner banner-style06 parallax-effect cdz-text-inside-wrap space-lg {{ block_text_position }}" style="background-image: url({{ img_url_banner }}); background-position: {{ parallax_alignment }}">
					<div class="container">
						<div class="row">
							<div class="col-12">
								<div class="cdz-banner-text {{ block_text_align }} cdz-text-inside cdz-text-position-insideMiddle col-10">
									<div class="desc01" style="color: {{ color_text_01 }}">{{ text_desc_01 | escape }}</div>
									<div class="desc" style="color: {{ color_text_02 }}">{{ text_desc_02 | escape }}</div>
									{%- if button_text != blank -%}
										<div class="desc-btn" style="margin-bottom: 10px"><a href="{{ banner_link }}" style="background-color: transparent; color: {{ color_btn }}; border-color: {{ color_btn }}">{{ button_text | escape }}</a></div>
									{%- endif -%}				
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			{%- endif -%}
			<div class="container">
				{%- if section.settings.enable_service -%}
					<div class="row adv-serv text-center">
						<div class="block-title mb-4">
							<p class="b-title h1 text-uppercase"><span>{{ section.settings.heading_serv | escape }}</span></p>
						</div>
						{%- for block in section.blocks -%}
							{% case block.type %}
								{% when 'services' %}
									{% assign title_serv = block.settings.title_serv %}
									{% assign content_serv = block.settings.content_serv %}
									<div class="{{ block.settings.class_boostrap_serv }}">
										<div class="cdzbox cdzborder box-serv text-center">
											<i class="fa fa-4x mb-3 {{ block.settings.class_icon_serv }}" aria-hidden="true"></i>
											<p class="b-title h3"><span>{{ title_serv | escape }}</span></p>
											<p class="content-serv"><span>{{ content_serv | escape }}</span></p>
										</div>
									</div>
							{% endcase %}
						{% endfor %}
					</div>
				{%- endif -%}	
			</div>
		</div>
	</div>
</div>
