  {%- if section.settings.show_top_menu and section.settings.menu != blank -%}
    <div class="top-nav-wrapper page-width">
      <nav class="top-nav" role="navigation" aria-label="Top navigation">
        <ul class="top-nav__list list-unstyled" role="list">
          {%- for link in linklists[section.settings.menu].links -%}
            <li class="top-nav__item">
              <a href="{{ link.url }}" class="top-nav__link link link--text{% if link.current %} top-nav__link--active{% endif %}">
