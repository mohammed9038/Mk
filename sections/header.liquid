{%- comment -%} Initialize Navigation Controller after all header scripts {%- endcomment -%}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize navigation controller specifically for this header
    setTimeout(function() {
      console.log('[Header] Checking for navigation controller...');
      
      if (window.navigationController) {
        console.log('[Header] Navigation controller found, validating setup');
        
        // Check for dropdowns
        const shopifyDropdowns = document.querySelectorAll('details[id^="Details-HeaderMenu-"]');
        const customDropdowns = document.querySelectorAll('details[data-dropdown]');
        console.log(`[Header] Found ${shopifyDropdowns.length} Shopify dropdowns and ${customDropdowns.length} custom dropdowns`);
        
        // Force re-initialization to ensure all dropdowns are captured
        window.navigationController.initDropdowns();
        window.navigationController.initLanguageSelector();
        
        console.log('[Header] Navigation controller initialization complete');
      } else {
        console.warn('[Header] Navigation controller not found, creating fallback');
        
        // Simple fallback for dropdown functionality
        const allDropdowns = document.querySelectorAll('details');
        console.log(`[Header] Setting up fallback for ${allDropdowns.length} dropdown elements`);
        
        allDropdowns.forEach(dropdown => {
          const summary = dropdown.querySelector('summary');
          if (summary) {
            summary.addEventListener('click', function(e) {
              // Close other dropdowns when opening a new one
              document.querySelectorAll('details[open]').forEach(other => {
                if (other !== dropdown) {
                  other.removeAttribute('open');
                }
              });
            });
          }
        });
        
        console.log('[Header] Fallback dropdown setup complete');
      }
      
      // Add test language switching functionality
      window.switchLanguage = function(lang) {
        console.log('[Language] Switching to:', lang);
        
        // Update the language selector display
        const languageSelector = document.querySelector('.header__language-selector summary span:last-child');
        const flagMap = {
          'en': { flag: 'üá∫üá∏', name: 'EN' },
          'ar': { flag: 'üá∏üá¶', name: 'AR' },
          'fr': { flag: 'üá´üá∑', name: 'FR' }
        };
        
        if (languageSelector && flagMap[lang]) {
          const flagElement = document.querySelector('.header__language-selector .language-flag');
          if (flagElement) flagElement.textContent = flagMap[lang].flag;
          languageSelector.textContent = flagMap[lang].name;
        }
        
        // Close the dropdown
        const details = document.querySelector('.header__language-selector');
        if (details) details.removeAttribute('open');
        
        // In a real implementation, this would trigger a page reload or AJAX update
        console.log(`Language switched to: ${flagMap[lang]?.name || lang}`);
        
        // Show success message
        const message = document.createElement('div');
        message.innerHTML = `‚úÖ Language changed to ${flagMap[lang]?.name || lang}`;
        message.style.cssText = 'position: fixed; top: 20px; right: 20px; background: #28a745; color: white; padding: 12px 20px; border-radius: 6px; z-index: 10000; font-family: inherit;';
        document.body.appendChild(message);
        setTimeout(() => message.remove(), 3000);
      };
    }, 200);
  });
</script>

