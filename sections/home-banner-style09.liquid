	  "default" : true
	},
	{
	  "type": "select",
	  "id": "heading_align",
	  "label": "Heading Alignment",
	  "options": [
	    {
	  	  "value": "left",
		  "label": "Text Left"
	    },
	    {
		  "value": "right",
		  "label": "Text Right"
	    },
	    {
		  "value": "center",
		  "label": "Text Center"
	    }
	  ]
	},
	{
	  "type": "select",
	  "id": "effect_style",
	  "label": "Effect Style",
	  "default": "02",
	  "options": [
		{
		  "label": "Style 01",
		  "value": "01"
		},
		{
		  "label": "Style 02",
		  "value": "02"
		},
		{
		  "label": "Style 03",
		  "value": "03"
		}
	  ]
	},
	{
	  "type": "image_picker",
	  "id": "image",
	  "label": "Image"
	},
	{
	  "type": "url",
	  "id": "banner_link",
	  "label": "Banner Link"
	},
	{
	  "type": "select",
	  "id": "image_position",
	  "label": "Position",
	  "default": "left",
	  "options": [
		{
		  "label": "Image Left",
		  "value": "left"
		},
		{
		  "label": "Image Right",
		  "value": "right"
		}
	  ]
	}
  ],
  "presets": [
    {
      "name": "Banner Section Style 09",
      "category": "Image",
	  "settings": {
			"effect_style": "05",
			"heading_align": "center",
			"banner_heading": "COMMING SOON",
			"subtext01": "Dailyroutine Stockholm will be available at Nordiska Kompaniet, Stockholm and in Gothenburg beginning 2018.",
			"subtext02": "When Josef Sachs founded Nordiska Kompaniet in 1902 he had a clear vision: the great department store NK was to be a commercial and cultural theatre - a contemporary stage. Grand words maybe, but they still permeate through every aspect of NK",
			"btn": "Shop Now"
		}
    }
  ]
}
{% endschema %}
