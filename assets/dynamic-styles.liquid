/* ===================================================================
   AL-SHARIQAH THEME - DYNAMIC STYLE GENERATOR
   Applies customization settings dynamically
   =================================================================== */

:root {
  /* Dynamic colors from theme settings */
  --color-primary: {{ settings.colors_accent_1 | default: '#2c5282' }};
  --color-secondary: {{ settings.colors_accent_2 | default: '#e53e3e' }};
  --color-background: {{ settings.colors_background | default: '#ffffff' }};
  --color-foreground: {{ settings.colors_text | default: '#1a202c' }};
  
  /* Typography settings */
  {% assign heading_font = settings.type_header_font | default: "Arial, sans-serif" %}
  {% assign body_font = settings.type_body_font | default: "Arial, sans-serif" %}
  
  --font-heading: {{ heading_font.family }}, {{ heading_font.fallback_families }};
  --font-body: {{ body_font.family }}, {{ body_font.fallback_families }};
  
  /* Layout settings */
  --container-max-width: {{ settings.page_width | default: 1200 }}px;
  --section-padding: {{ settings.spacing_sections_desktop | default: 40 }}px;
  --grid-gap: {{ settings.spacing_grid_horizontal | default: 24 }}px;
  
  /* Button settings */
  --button-radius: {{ settings.buttons_radius | default: 8 }}px;
  --button-shadow: {% if settings.buttons_shadow_opacity > 0 %}{{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba({{ settings.buttons_shadow_color.red }}, {{ settings.buttons_shadow_color.green }}, {{ settings.buttons_shadow_color.blue }}, {{ settings.buttons_shadow_opacity | divided_by: 100.0 }}){% else %}none{% endif %};
  
  /* Card settings */
  --card-radius: {{ settings.card_corner_radius | default: 8 }}px;
  --card-shadow: {% if settings.card_shadow_opacity > 0 %}{{ settings.card_shadow_horizontal_offset }}px {{ settings.card_shadow_vertical_offset }}px {{ settings.card_shadow_blur }}px rgba({{ settings.card_shadow_color.red }}, {{ settings.card_shadow_color.green }}, {{ settings.card_shadow_color.blue }}, {{ settings.card_shadow_opacity | divided_by: 100.0 }}){% else %}none{% endif %};
  
  /* Animation settings */
  --animation-duration: {% if settings.animations_hover_elements == 'none' %}0ms{% else %}250ms{% endif %};
}

/* ===================================================================
   ENHANCED COMPONENT STYLES
   =================================================================== */

/* Enhanced Button Styles */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.75rem 1.5rem;
  font-family: var(--font-heading);
  font-weight: 600;
  text-decoration: none;
  border: none;
  border-radius: var(--button-radius);
  box-shadow: var(--button-shadow);
  transition: all var(--animation-duration) ease;
  cursor: pointer;
  white-space: nowrap;
  user-select: none;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.btn:hover::before {
  left: 100%;
}

.btn--primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary));
  color: white;
}

.btn--primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(var(--color-primary-rgb), 0.3);
}

.btn--secondary {
  background: transparent;
  color: var(--color-primary);
  border: 2px solid var(--color-primary);
}

.btn--secondary:hover {
  background: var(--color-primary);
  color: white;
}

.btn--ghost {
  background: transparent;
  color: var(--color-foreground);
  box-shadow: none;
}

.btn--ghost:hover {
  background: rgba(var(--color-primary-rgb), 0.1);
}

/* Enhanced Card Styles */
.card {
  background: var(--color-background);
  border-radius: var(--card-radius);
  box-shadow: var(--card-shadow);
  padding: 1.5rem;
  transition: all var(--animation-duration) ease;
  position: relative;
  overflow: hidden;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}

.card--elevated {
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.card--bordered {
  border: 1px solid var(--color-border);
  box-shadow: none;
}

.card--gradient {
  background: linear-gradient(135deg, var(--color-background), var(--color-background-alt));
}

/* Enhanced Product Cards */
.product-card {
  position: relative;
  background: var(--color-background);
  border-radius: var(--card-radius);
  overflow: hidden;
  transition: all var(--animation-duration) ease;
  box-shadow: var(--card-shadow);
}

.product-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 25px 50px rgba(0,0,0,0.15);
}

.product-card__image {
  position: relative;
  overflow: hidden;
  border-radius: var(--card-radius) var(--card-radius) 0 0;
}

.product-card__image img {
  width: 100%;
  height: auto;
  transition: transform var(--animation-duration) ease;
}

.product-card:hover .product-card__image img {
  transform: scale(1.05);
}

.product-card__badge {
  position: absolute;
  top: 1rem;
  left: 1rem;
  background: var(--color-accent);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 600;
  z-index: 2;
}

.product-card__quick-add {
  position: absolute;
  bottom: 1rem;
  right: 1rem;
  opacity: 0;
  transform: translateY(10px);
  transition: all var(--animation-duration) ease;
}

.product-card:hover .product-card__quick-add {
  opacity: 1;
  transform: translateY(0);
}

/* Enhanced Form Styles */
.form-field {
  position: relative;
  margin-bottom: 1.5rem;
}

.form-field__input {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 2px solid var(--color-border);
  border-radius: var(--input-radius);
  font-family: var(--font-body);
  font-size: 1rem;
  background: var(--color-background);
  color: var(--color-foreground);
  transition: all var(--animation-duration) ease;
}

.form-field__input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.1);
}

.form-field__label {
  position: absolute;
  top: 0.75rem;
  left: 1rem;
  color: var(--color-foreground-light);
  font-size: 1rem;
  transition: all var(--animation-duration) ease;
  pointer-events: none;
  background: var(--color-background);
  padding: 0 0.25rem;
}

.form-field__input:focus + .form-field__label,
.form-field__input:not(:placeholder-shown) + .form-field__label {
  transform: translateY(-1.5rem) scale(0.875);
  color: var(--color-primary);
}

/* Enhanced Navigation */
.nav {
  background: var(--color-background);
  box-shadow: 0 2px 20px rgba(0,0,0,0.1);
  backdrop-filter: blur(10px);
}

.nav__item {
  position: relative;
  padding: 1rem 1.5rem;
  color: var(--color-foreground);
  text-decoration: none;
  font-family: var(--font-heading);
  font-weight: 500;
  transition: all var(--animation-duration) ease;
}

.nav__item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--color-primary);
  transition: all var(--animation-duration) ease;
  transform: translateX(-50%);
}

.nav__item:hover::after,
.nav__item--active::after {
  width: 80%;
}

/* Enhanced Typography */
.heading {
  font-family: var(--font-heading);
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, var(--color-foreground), var(--color-primary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.heading--large {
  font-size: clamp(2rem, 5vw, 4rem);
  margin-bottom: 2rem;
}

.heading--medium {
  font-size: clamp(1.5rem, 4vw, 2.5rem);
  margin-bottom: 1.5rem;
}

.heading--small {
  font-size: clamp(1.25rem, 3vw, 2rem);
  margin-bottom: 1rem;
}

/* Enhanced Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.animate-fade-in-up {
  animation: fadeInUp 0.6s ease-out forwards;
}

.animate-fade-in-left {
  animation: fadeInLeft 0.6s ease-out forwards;
}

.animate-pulse {
  animation: pulse 2s infinite;
}

/* Enhanced Grid System */
.grid {
  display: grid;
  gap: var(--grid-gap);
}

.grid--1 { grid-template-columns: 1fr; }
.grid--2 { grid-template-columns: repeat(2, 1fr); }
.grid--3 { grid-template-columns: repeat(3, 1fr); }
.grid--4 { grid-template-columns: repeat(4, 1fr); }

@media (max-width: 768px) {
  .grid--2,
  .grid--3,
  .grid--4 {
    grid-template-columns: 1fr;
  }
}

/* Enhanced Utility Classes */
.text-gradient {
  background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.bg-gradient {
  background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
}

.glassmorphism {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.neumorphism {
  background: var(--color-background);
  box-shadow: 
    20px 20px 40px rgba(0,0,0,0.1),
    -20px -20px 40px rgba(255,255,255,0.8);
}

/* Dark mode styles */
@media (prefers-color-scheme: dark) {
  .card {
    background: var(--color-background-alt);
  }
  
  .neumorphism {
    box-shadow: 
      20px 20px 40px rgba(0,0,0,0.3),
      -20px -20px 40px rgba(255,255,255,0.05);
  }
}
