{% assign default_font = settings.default_font %}
{% assign h1_font = settings.h1_font %}
{% assign h2_font = settings.h2_font %}
{% assign h3_font = settings.h3_font %}
{% assign h4_font = settings.h4_font %}
{% assign h5_font = settings.h5_font %}
{% assign h6_font = settings.h6_font %}
{% assign special_font = settings.special_font %}
{% assign note_font = settings.note_font %}
$defaultFont: {{ default_font }};
$h1Font: {{ h1_font }};
$h2Font: {{ h2_font }};
$h3Font: {{ h3_font }};
$h4Font: {{ h4_font }};
$h5Font: {{ h5_font }};
$h6Font: {{ h6_font }};
$specialFont: {{ special_font }};
$noteFont: {{ note_font }};
@mixin default_font(){
	font: $defaultFont;
}
@mixin h1_font(){
	font: $h1Font;
	color: $main_title_text;
}
@mixin h2_font(){
	font: $h2Font;
	color: $main_title_text;
}
@mixin h3_font(){
	font: $h3Font;
	color: $main_title_text;
}
@mixin h4_font(){
	font: $h4Font;
}
@mixin h5_font(){
	font: $h5Font;
}
@mixin h6_font(){
	font: $h6Font;
}
@mixin special_font(){
	font: $specialFont;
}

.cdz-product-labels .label-item{
	font: $noteFont;
	padding: 2px 10px;
	-webkit-border-radius: $btn_radius;
    -moz-border-radius: $btn_radius;
    border-radius: $btn_radius;
}

.sidebar {
	.block {
		.block-title{
			font: $h3Font;;
			padding:0;
			margin-top: 0;
			vertical-align: top;
			text-transform: capitalize;
			border-bottom: 1px solid $main_border;
			strong {	
				display: inline-block;
				border-bottom: 3px solid $main_title_border;
				padding-bottom:15px;
				margin-bottom: -1px;
				font-weight: 600;
			}
		}
		.block-content{
			padding-left: 0;
			padding-right: 0;
		}
		&.block-category {
			ul.site-nav{
				margin: 0;
			}
			.item a{
				padding-left: 0;
				padding-right: 0;
			}
		}
	}
}

.product-item-name .product-item-link, .product-item-link, .product.name a,
.product-list-style-02 .product-item .actions-secondary .action,
.product-list-style-02 .product-item .actions-primary .btn-cart{font-weight: 500;}

@media only screen and (min-width: 768px){
	.cdz-slideshow-04{
		.slides__title.h1{ 
			font-size: 60px;
			font-weight: 600;
		}
		.slides__title.h1{ 
			margin-bottom: 0;
		}
		.slides__subtext.h3 {
			font-size: 18px;
			margin-bottom: 2.5rem;
		}
		.slides__btn{
			display: inline-block;
			padding: 10px 45px;
			line-height: 1.55em;
			min-height: 1px;
		}
	}
}

@media only screen and (max-width: 767px){
	.cdz-slideshow-04  .slides__text--large{
		.slides__title.h1{ 
			font-size: 150%;
		}
		.slides__subtext.h3 {
			font-size: 120%;
		}
		.cdz-slideshow .slides__btn{
			line-height: 1.35;
			min-width: 2px;
		}
	}
}


.breadcrumbs {
    padding-top: 20px;
    padding-bottom: 20px;
    background-color: #f9f9f9;
    position: relative;
    &:before{
		width: 100%;
		top: 0;
		left: -100%;
		position: absolute;
		height: 100%;
		content: '';
		background-color: #f9f9f9;
	}
	&:after{
		width: 100%;
		top: 0;
		left: 100%;
		position: absolute;
		height: 100%;
		content: '';
		background-color: #f9f9f9;

	}
}
