/*break points*/
$screen-xs-min: 480px;
$screen-sm-min: 768px;
$screen-md-min: 992px;
$screen-lg-min: 1200px;

$screen-xs-max: (#{$screen-sm-min - 1});/*767px*/
$screen-sm-max: (#{$screen-md-min - 1});/*991px*/
$screen-md-max: (#{$screen-lg-min - 1});/*1199px*/

$phonedown: 			"only screen and (max-width: #{$screen-xs-min})"; /*max-width:480px*/
$phone:             	"only screen and (max-width: #{$screen-xs-max})"; /*max-width:767px*/

$tablet_vertical:       "only screen and (min-width: #{$screen-sm-min})"; /*min-width:768px*/
$tablet_horizontal:	    "only screen and (min-width: #{$screen-md-min})"; /*min-width:992*/
$tablet_vertical_down:  "only screen and (max-width: #{$screen-sm-max})"; /*max-width:991*/
$tablet_strict:     	"only screen and (min-width: #{$screen-sm-min}) and (max-width: #{$screen-md-max})"; 
						/*min-width:768px max-width:1199px */
$tablet-strict_small:   "only screen and (min-width: #{$screen-sm-min}) and (max-width: #{$screen-sm-max})"; 
						/*min-width:768 max-width:991px */
$tablet-strict_large: 	"only screen and (min-width: #{$screen-md-min}) and (max-width: #{$screen-md-max})";
						/*min-width:992px max-width:1199px*/

$desktop:           	"only screen and (min-width: #{$screen-lg-min})"; /*min-width: 1200px*/
$desktop_down:			"only screen and (max-width: #{$screen-md-max})"; /*max-width: 1199px*/


/*Codazon Custom Theme*/
