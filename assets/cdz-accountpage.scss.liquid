			width: 100%;
			margin: 5px 0 10px;
			@include abs-style($btn_primary_text, $btn_primary_border, $btn_primary_background);
			&:hover{
				@include abs-style($btn_hover_text, $btn_hover_border, $btn_hover_background);
			}
		}
		a {
			border-bottom: 1px solid;
			text-decoration: none !important;
			text-transform: uppercase;
		}
	}
	
}
