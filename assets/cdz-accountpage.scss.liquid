.box-form {
	padding: 20px;
	margin-bottom: 20px;
	@include abs-boxshadow(0px 4px 34px rgba(0, 0, 0, 0.08));
	@include abs-borderradius($main_box_radius);
	background: $main_block_background;
	border: 1px solid $main_border;
	a{
		color: $main_text;
		&:hover{
			color: $main_hover_text;
		}
	}
	input[type=checkbox]{vertical-align: middle;}
	select {
		margin-top: 8px;
		margin-bottom: 15px;
		height: 40px;
		line-height: 39px;
		padding-left: 0;
		padding-right: 0;
		border-width: 0;
		border-bottom-width: 1px;
		border-color: $main_input_border;
		color: $main_input_text;
		outline: 0;
	}
	.address_province{
		select {
			margin-top: 0;
		}
		label {
			margin: 0;
			color: $main_hover_text;
		}
	}
	.btn{
		margin-right: 5px;
		@include abs-style($btn_primary_text, $btn_primary_border, $btn_primary_background);
		&:hover{
			@include abs-style($btn_hover_text, $btn_hover_border, $btn_hover_background);
		}
		.rtl-layout & {
			margin-right: 0px;
			margin-left: 5px;
		}
	}
}

.login-container,
.register-container{
	.block-title {
		h1 {
			text-transform: uppercase;
			font-weight: $bodyFrimaryFontWeight500;
			line-height: 1;
		}
	}
	.action{
		#customer_register_link{
			border: 1px solid;
			padding: 7px 15px;
			min-height: auto;
			text-transform: uppercase;
			height: auto;
			line-height: 1;
			@include transition(all 500ms ease);
