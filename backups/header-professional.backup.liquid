  .header--mobile-left .header__left-section { justify-content: flex-start; }
  
  {%- comment -%} Navigation Animations {%- endcomment -%}
  {%- if section.settings.dropdown_animation == 'fade' -%}
    .header__submenu { transition: opacity var(--animation-duration) ease; }
  {%- elsif section.settings.dropdown_animation == 'slide' -%}
    .header__submenu { transition: all var(--animation-duration) ease; }
  {%- elsif section.settings.dropdown_animation == 'zoom' -%}
    .header__submenu { transition: all var(--animation-duration) ease; transform: scale(0.95) translateY(-10px); }
    .header__submenu.is-open { transform: scale(1) translateY(0); }
  {%- endif -%}
  
  {%- comment -%} Custom CSS from Settings {%- endcomment -%}
  {%- if section.settings.custom_css != blank -%}
    {{ section.settings.custom_css }}
  {%- endif -%}
</style>

{%- comment -%} Professional Header JavaScript {%- endcomment -%}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Professional Navigation Controller
    class ProfessionalHeader {
      constructor() {
        this.init();
      }
      
      init() {
        this.setupDropdowns();
        this.setupSearch();
        this.setupMobileMenu();
        this.setupStickyHeader();
        {%- if section.settings.enable_debug_mode -%}
        console.log('üè¢ Professional Header: Initialized successfully');
        {%- endif -%}
      }
      
      setupDropdowns() {
        {%- if section.settings.enable_hover_dropdowns -%}
        // Enable hover dropdowns on desktop
        const menuItems = document.querySelectorAll('.header__navigation .top-nav__item');
        menuItems.forEach(item => {
          const submenu = item.querySelector('.header__submenu');
          if (submenu) {
            item.addEventListener('mouseenter', () => {
              if (window.innerWidth >= 990) {
                submenu.classList.add('is-open');
              }
            });
            item.addEventListener('mouseleave', () => {
              submenu.classList.remove('is-open');
            });
          }
        });
        {%- endif -%}
      }
      
      setupSearch() {
        // Search functionality
        const searchForms = document.querySelectorAll('.search-form');
        searchForms.forEach(form => {
          form.addEventListener('submit', (e) => {
            const input = form.querySelector('.search-input');
            if (!input.value.trim()) {
              e.preventDefault();
              input.focus();
            }
          });
        });
      }
      
      setupMobileMenu() {
        // Mobile menu toggle
        const menuToggle = document.querySelector('.header__menu-toggle');
        const drawer = document.querySelector('.header__drawer');
        
        if (menuToggle && drawer) {
          menuToggle.addEventListener('click', () => {
            drawer.classList.toggle('is-open');
            document.body.classList.toggle('drawer-open');
          });
        }
      }
      
      setupStickyHeader() {
        // Sticky header behavior handled by existing sticky-header component
        {%- if section.settings.enable_performance_monitoring -%}
        console.log('üìä Header Performance: Setup complete');
        {%- endif -%}
      }
    }
    
    // Initialize Professional Header
    new ProfessionalHeader();
    
    {%- comment -%} Custom JavaScript from Settings {%- endcomment -%}
    {%- if section.settings.custom_js != blank -%}
      {{ section.settings.custom_js }}
    {%- endif -%}
  });
</script>

